global:
  scrape_interval: <%= ENV['VMAGENT_SCRAPE_INTERVAL'] || '15s' %>

scrape_configs:
  - job_name: vmagent
    static_configs:
    - targets: ['localhost:<%= ENV['VMAGENT_HTTP_PORT'] || 8429 %>']
      labels:
        dyno: <%= ENV['DYNO'] %>

  - job_name: <%= ENV['VMAGENT_APP_JOB_NAME'] || 'web' %>
    static_configs:
    - targets: ['localhost:<%= ENV['PORT'] %>']
      labels:
        dyno: <%= ENV['DYNO'] %>
